# Activer le directory listing pour l'installeur automatique
Options +Indexes

# Améliorer l'affichage du listing
IndexOptions +FancyIndexing +HTMLTable +SuppressDescription +NameWidth=* +IconsAreLinks +FoldersFirst

# Types MIME pour les fichiers AutoIt
AddType application/octet-stream .exe
AddType text/plain .au3
AddType text/plain .txt

# Autoriser l'accès depuis n'importe quelle origine (CORS) pour les téléchargements
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

# Désactiver le cache pour toujours avoir la liste à jour
<IfModule mod_expires.c>
    ExpiresActive Off
</IfModule>

# Performance - compression si disponible
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html
</IfModule>
